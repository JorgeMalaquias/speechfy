// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id
  name     String
  photoUrl String

  @@map("users")
}

model Record {
  id       Int    @id @default(autoincrement())
  text     String
  audioUrl String

  @@map("records")
}
